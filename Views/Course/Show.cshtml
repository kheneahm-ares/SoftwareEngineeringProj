@model CodingBlogDemo2.Models.ViewModels.AssignmentViewModel
@{
    ViewData["Title"] = "Show Course";
}

<div class="row">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    <div class="col-md-8" style="border: 2px dashed rgba(27,31,35,0.3); padding: 30px;">

        <h3 style="padding-top: 0px; margin-top: 0px; font-weight: 600;">
            All Posts
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Post" asp-action="Create" asp-route-id="@ViewBag.CourseId" class="btn btn-default">Create Post</a>

            }
        </h3>

        <hr />
        @if (Model.CodeSnippets.Count() <= 0 && Model.MultipleChoices.Count() <= 0 && Model.CodeSnippetNoAnswers.Count() <= 0)
        {
            <h5>
                No posts...
            </h5>
        }
        else
        {
            <h3>Multiple Choice Posts</h3>

            @foreach (MultipleChoice mc in Model.MultipleChoices)
            {
                <a asp-route="PostDetails" asp-route-id="@ViewBag.CourseId" asp-route-assignmentId="@mc.MultipleChoiceId" asp-route-categoryId="1">@mc.Name</a>
                <br />
            }
            <hr />


            <h3>Code Snippet Posts</h3>

            @foreach (CodeSnippet cs in Model.CodeSnippets)
            {
                <a asp-route="PostDetails" asp-route-id="@ViewBag.CourseId" asp-route-assignmentId="@cs.CodeSnippetId" asp-route-categoryId="2">@cs.Name</a>
                <br />
            }
            <hr />

            <h3>Code Snippet No Answer Posts</h3>

            @foreach (CodeSnippetNoAnswer cs in Model.CodeSnippetNoAnswers)
            {
                <a asp-route="PostDetails" asp-route-id="@ViewBag.CourseId" asp-route-assignmentId="@cs.CodeSnippetNoAnswerId" asp-route-categoryId="3">@cs.Name</a>
                <br />
            }
        }
    </div>

    <div class="col-md-3" style="margin-left: 15px;">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a asp-controller="Course" asp-action="Index" style="font-weight: 500; font-size: 14px;">Modules</a>
            </div>

        </div>
    </div>
</div>
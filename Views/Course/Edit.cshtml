@model Course
@{
    ViewData["Title"] = "Edit Course";
}


<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<form asp-controller="Course" asp-action="Edit" asp-route-courseId="@Model.CourseId" role="form" class="form-horizontal" method="post">
    <h2 class="col-md-offset-4">Update Course </h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <hr />
    <div class="form-group">
        <label asp-for="Name" class="col-md-5 control-label"></label>
        <div>
            <input asp-for="Name" class="col-md-2 form-control" />
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-success col-md-offset-5 col-md-2" value="Update Course Name" />
    </div>

</form>
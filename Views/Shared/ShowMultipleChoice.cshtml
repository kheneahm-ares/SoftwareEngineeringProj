                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>

            <div class="funkyradio">
                <div class="funkyradio-primary col-md-6 col-md-offset-1">
                    <input type="radio" value="A" name="radio" id="A" />
                    <label for="A">@Html.DisplayFor(model => model.A)</label>
                </div>
                <div class="funkyradio-primary col-md-6 col-md-offset-1">
                    <input type="radio" value="B" name="radio" id="B" />
                    <label for="B">@Html.DisplayFor(model => model.B)</label>
                </div>
                <div class="funkyradio-primary col-md-6 col-md-offset-1">
                    <input type="radio" value="C" name="radio" id="C" />
                    <label for="C">@Html.DisplayFor(model => model.C)</label>
                </div>
                <div class="funkyradio-primary col-md-6 col-md-offset-1">
                    <input type="radio" value="D" name="radio" id="D" />
                    <label for="D">@Html.DisplayFor(model => model.D)</label>
                </div>
                <div><br /></div>
            </div>


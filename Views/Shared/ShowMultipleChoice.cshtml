@model CodingBlogDemo2.Models.MultipleChoice
<div class="row">
    @if (User.IsInRole("Admin")  && ViewBag.IsCourseCreator)
    {
        <div class="col-md-offset-9">
            <a asp-route="EditPost" asp-route-id="@ViewBag.CourseId" asp-route-assignmentId="@Model.MultipleChoiceId" asp-route-categoryId="1" asp-route-folderId="@ViewBag.folderId" class="btn btn-default">
                <i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
            <form style="display:inline" method="post" asp-route="DeletePost" asp-route-id="@ViewBag.CourseId" asp-route-assignmentId="@Model.MultipleChoiceId" asp-route-categoryId="1">              
                <button type="submit" class="btn btn-default" onclick="return confirm('Are you sure you want to Delete this assignment?')" style="color: black;">
                    <i class="fa fa-trash-o" aria-hidden="true"></i> Delete
                </button>
            </form>
            <a asp-route="PostResults" asp-route-id="@ViewBag.CourseId" asp-route-assignmentId="@Model.MultipleChoiceId" asp-route-categoryId="1" class="btn btn-default">
                <i class="fa fa-pie-chart" aria-hidden="true"></i> Results</a>

        </div>
    }
    <hr />

    <form asp-route="SubmitMultipleChoice" role="form" class="form-horizontal col-md-12" method="post" id="assignment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
